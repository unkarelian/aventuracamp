---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="group feature-card">
  <div class="feature-icon group-hover:bg-primary group-hover:text-background-dark">
    <span class="material-symbols-outlined text-3xl">{icon}</span>
  </div>
  <h3 class="text-xl font-bold text-text-cream mb-3">{title}</h3>
  <p class="text-text-muted font-body leading-relaxed">{description}</p>
</div>
